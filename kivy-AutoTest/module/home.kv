#:import Factory kivy.factory.Factory
<COMTabbedpanelItem@TabbedPanelItem>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: pt(30)
            Label:
                size_hint_x: None
                width: pt(50)
                text: 'input'
            TextInput:
            Spinner:
                size_hint_x:None
                width:pt(80)
                text: 'None'
                values: 'LF', 'CR', 'LF/CR', 'None'
                option_cls: Factory.get('HomeSpinnerOption')
        HomeSplitter:
            TextInput:
        TextInput:
        BoxLayout:
            size_hint_y: None
            height: pt(30)
            Button:
                size_hint_x:None
                width: pt(50)
                text: 'clear'
            Label:
                pos_hint: {'right': 1}
                text: '2012-12-12'
                halign: 'right'
                valign: 'center'
                text_size: self.width, None
                #text_size: self.texture_size

<HomeSpinnerOption@SpinnerOption>:

<COMTabbedpanel@Tabbedpanel>:
    do_default_tab: False

<HomeSplitter@Splitter>:
    min_size: pt(10)
    sizable_from: 'bottom'

<Home@BoxLayout>:
    orientation: 'vertical'
    HomeSplitter:
        size_hint_y: None
        height: pt(100)
        GridLayout:
            cols: 1
            canvas:
                Color:
                    rgba: 1, 1, 1, .3
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: 'COM1'

    COMTabbedpanel:
        text: 'COM1'
        COMTabbedpanelItem:
            text: 'COM1'
